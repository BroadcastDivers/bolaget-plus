{
  "manifest_version": 2,
  "name": "Ratings for Systembolaget",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "*://*.vivino.com/*",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.systembolaget.se/*"
      ],
      "js": [
        "dist/content-script.js"
      ]
    }
  ],
  "icons": {
    "48": "icons/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ratings-systembolaget@mydomain.com",
      "strict_min_version": "109.0"
    }
  },
  "browser_action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self'; connect-src 'self' https://www.vivino.com; script-src-elem 'self'"
}
